/*图片code  */
.container{background-color: #fff;}
/*会员卡  */
.img-container .content text,.img-container .content icon{position: absolute;color: #fff;}
.img-container .content{width:645.83rpx;margin:auto;position: relative;}
.img-container .name{font-size: 25rpx;left: 117.708rpx;top:47.91rpx;width: 97.917rpx;}
.img-container .number{font-size: 37.5rpx;left: 41.7rpx;bottom:47.91rpx;}
.img-container{text-align: center;padding-top: 43.75rpx;}
.img-container image{width: 645.83rpx;height: 385.417rpx;}
.img-container .balance{font-size: 43.75rpx;color: #696969;height: 125rpx;line-height: 125rpx;}
