/*列表  */
.lists{padding: 0 31.25rpx;background-color: #fff;}
.lists scroll-view{height: 100%;}
.list-item{height: 116.7rpx;border-top:1rpx solid #dcdcdc;position:relative;line-height: 116.7rpx;}
.list-item .name{font-size: 37.5rpx;white-space: nowrap;overflow:hidden;text-overflow: ellipsis;height:100%;display: block;width: 100%;box-sizing: border-box;padding-left: 79.17rpx;}
.list-item icon{width: 47.9rpx;height: 47.9rpx;border-radius: 50%;vertical-align: middle;position: absolute;}
.list-item:first-child{border-top:0;}