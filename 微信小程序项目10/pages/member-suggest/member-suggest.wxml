<!--pages/member-suggest/member-suggest.wxml-->


<view class='container'>
<view class='success-type'>
    <view class='type-header'>(必选)你想反馈的问题类型</view>
    <view class='success-content'>
    <radio-group class="radio-group" bindchange="radioChange">
      <view class='list' bindtap='bindViewChangePassword'>
          <radio value='0' checked='true'></radio>
          <label>建议</label>  
      </view>
      <view class='list' bindtap='bindViewChangePassword'>
          <radio value="1"></radio>
          <label>投诉</label>  
      </view>
      </radio-group>
    </view>
</view>
<view class='content'>
    <textarea maxlength="200" placeholder="请输入不少于200字" id="reason" name="description" class="isNull"></textarea>
</view>
    <view class='lists'>
        <view class='list' bindtap='bindViewChangePassword'>
        
            <label>*手机号</label>
            <input bindinput='amountInput' type='number'></input>
            <!-- <icon type='' class='icon iconfont icon-detail'></icon> -->
        </view>
  
        <!-- <view class='list checkCode' bindtap='bindViewChangePassword'>
            <label>验证码</label>
            <text>获取验证码</text>
        </view> -->
    </view>
    <button class='saveBtn'>提交</button>
</view>