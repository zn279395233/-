<!--pages/member-suggest/member-suggest.wxml-->


<view class='container'>
<view class='success-type'>
    <view class='type-header'>(必选)你想反馈的问题类型</view>
    <view class='success-content'>
    <radio-group class="radio-group" bindchange="radioChange">
      <view class='list' bindtap='bindViewChangePassword'>
          <radio value='0' checked='true'></radio>
          <label>建议</label>  
      </view>
      <view class='list' bindtap='bindViewChangePassword'>
          <radio value="1"></radio>
          <label>投诉</label>  
      </view>
      </radio-group>
    </view>
</view>
<view class='content'>
    <textarea maxlength="200" placeholder="请输入不超过200个字的描述" id="reason" name="description" class="isNull"></textarea>
    <view class="count">0/200</view>
</view>
    <view class='lists'>
        <view class='list' bindtap='bindViewChangePassword'>
            <label>*手机号</label>
            <input bindinput='amountInput' type='number'></input>
        </view>
    </view>
    <button class='saveBtn' bindtap='saveBtn'>提交</button>
</view>