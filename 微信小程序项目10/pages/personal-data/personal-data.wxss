.headPortrait{line-height: 230rpx;width: 100%;height:230rpx;text-align: center;}
.headPortrait image{width: 144rpx;height: 144rpx;border-radius: 50%;border:2rpx solid #d8d8d8;vertical-align: middle;}
/*列表  */
.lists{background-color: white;padding:0 31.25rpx;width: 100%;height: auto;box-sizing: border-box;border-top:1rpx solid #dcdcdc;border-bottom:1rpx solid #dcdcdc;}
.list-item{height: 115rpx;line-height: 115rpx;border-top:1rpx solid #dcdcdc;width:100%;white-space: nowrap;}
.list-item:first-child{border-top: 0;}
.list-item label{color: #999;font-size: 29rpx;}
.list-item text{float:right;height: 100%;color: #333333;font-size: 29rpx;text-align: right;width:560rpx;}
