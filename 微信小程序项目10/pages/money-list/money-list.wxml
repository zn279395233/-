
<view class="container">
  <view class='totalMoney'>
    <text class='month'>本月</text>
    <text class='expend'>支出￥10.00</text><text class='income'>收入￥10.00</text><icon class='success'></icon>
  </view>
  <view class='lists'>
   <scroll-view scroll-y="true" style="height: 100%;" bindscrolltolower="loadMore">
     <view wx:for="{{order}}" class='list-item'  bindtap="bindViewTap">
          <image src="{{item.imageSrc}}"></image>
          <view class='list-c'>
              <label class='name'>{{item.merchantName}}</label>
              <text class='date'>{{item.date}}</text>
          </view>
          <text class='money payOut' wx:if="{{item.money >= 0}}">+{{item.money}}</text>
          <text class='money payIn' wx:else="{{item.money > 0}}">{{item.money}}</text>
    </view>
    <view class="tips1">
          <view wx:if="{{hasMore}}" style="display: flex;flex-direction: row;align-items: center;align-self: center;justify-content: center;">
          <icon type="success" size="20"/><text>加载中...</text>
          </view>
          <view wx:else><text>没有更多内容了</text></view>
    </view>
    </scroll-view>
  </view>
</view>