
<view class="container">
  <view class='headPortrait'>
    <image src='{{userInfo.avatarUrl}}'  background-size="cover"></image>
  </view>
  <form>
      <view class='lists'>
          <view class='list-item'>
              <label>姓名</label>
              <input value='{{info.userValue}}'  bindinput="userNameInput"></input>
          </view>
          <view class='list-item'>
              <label>会员号</label>
              <input value='{{info.memberValue}}'></input>
          </view>
          <view class='list-item'>
              <label>手机号码</label>
              <input value='{{info.contactValue}}'></input>
          </view>
          <view class='list-item'>
              <label>身份证号</label>
              <input value='{{info.idValue}}'></input>
          </view>
          <view class='list-item'>
              <label>我的地址</label>
              <input value='{{info.userLocationValue}}'></input>
          </view>
        </view>
  </form>
</view>
