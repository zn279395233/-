/* 日历样式 */
.calendar{width: 750rpx;background-color: #ffffff;border-radius: 5.2083rpx;overflow: hidden; position: fixed;bottom: 0rpx;left: 0;right: 0;margin: auto;z-index: 9999;background: #fff;padding: 0 31.25rpx;height: 550rpx;margin-bottom: 0;}
.calendar button{ width: 50%; background-color: #fff; border: none;color: gray; float: left;border-top: 1rpx solid #dcdcdc;border-radius: 0;}
.calendar button::after{border: 0}
.calendar button:first-child{border-right: 1rpx solid #dcdcdc}

.calendar .sure{color: #448bfa;float: right;}
.calendar{padding: 0;}
.calendar .calendar-l{text-align: center;padding: 20rpx 0;border-bottom: 1rpx solid #dcdcdc;}