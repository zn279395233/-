/* 模板背景 */
.modal-mask {width: 100%; height: 100%;position: fixed; top: 0;left: 0;background: #000;opacity: 0.5;overflow: hidden;z-index: 9000;color: #fff;}
.modal-dialog {width: 625rpx;height: 354.17rpx;background-color: #ffffff;border-radius: 5.2083rpx;overflow: hidden; position: fixed;top: 208.3rpx;
