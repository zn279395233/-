.pay .moneys{font-size: 62.5rpx;}
.pay .number{font-size: 75rpx;}
.pay .modal-content,.pay .modal-footer{padding: 0 31.25rpx;}
.pay .modal-content{height: 165.2rpx;text-align: center;font-size: 29.17rpx;}
.pay .modal-title text{font-size: 37.5rpx;}
.pay .modal-title image{vertical-align: middle;margin-left: 16.67rpx;margin-right: 20.83rpx;}
.payPassword{font-size: 0;text-align: left}
.payPassword input:first-child{border-left: solid 1rpx #dcdcdc;}
.payPassword input{width: 97.0417rpx;height: 94.7917rpx;background-color: #ffffff;border-top: solid 1rpx #dcdcdc;border-right: solid 1rpx #dcdcdc;border-bottom: solid 1rpx #dcdcdc;display: inline-block;vertical-align: middle;}
